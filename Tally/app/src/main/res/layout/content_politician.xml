<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_politician">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="false"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="@color/md_grey_600"
                android:layout_below="@+id/followerCount"
                android:layout_marginTop="8dp"/>

            <TextView
                android:text="0\nFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/followerCount"
                android:gravity="top|center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/md_blue_grey_700"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:text="0%\nResponse Rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/responseRate"
                android:gravity="top|center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/md_blue_grey_700"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/smallDescriptionRL">

            <ImageView
                android:id="@+id/infoIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_info_outline_24dp"
                android:tint="@color/md_blue_grey_800"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/politicianName"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/md_grey_800"
                android:text="@string/default_event_name"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/smallDescription"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/smallDescription"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_toEndOf="@+id/infoIcon"
                android:textColor="@color/md_grey_700"
                android:text="Commissioner District 1"
                android:textSize="14sp"
                android:layout_below="@+id/politicianName"/>

        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="false"
            android:padding="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:id="@+id/phoneNumberRL">

                <TextView
                    android:text="Office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_toEndOf="@+id/ivContactItem1"
                    android:textColor="@color/md_grey_600"
                    android:id="@+id/contactType1"
                    android:layout_below="@+id/teleNum1"/>

                <TextView
                    android:text="918-596-5020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/teleNum1"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_toEndOf="@+id/ivContactItem1"
                    android:textColor="@color/md_grey_800"
                    android:textSize="18dp"/>

                <ImageView
                    android:id="@+id/ivContactItem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:tint="@color/md_blue_grey_800"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/emailRL">

            <ImageView
                android:id="@+id/ivContactItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_email_black_24dp"
                android:tint="@color/md_blue_grey_800"
                android:layout_alignParentStart="true"/>

            <TextView
                android:text="jsmaligo@tulsacounty.org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailAddr1"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_toEndOf="@+id/ivContactItem2"
                android:textColor="@color/md_grey_800"
                android:textSize="18dp"/>

        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/expandLV"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

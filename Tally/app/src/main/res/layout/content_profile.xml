<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.tallythevote.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <LinearLayout
        android:id="@+id/ProfileHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_blue_900"
        android:paddingBottom="5dp">


       <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_tally_logo"
            android:id="@+id/profilePic"
            android:cropToPadding="false"
            android:padding="15dp"
            />

        <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usernameProfileText"
            android:gravity="center_horizontal"
            android:textColor="@color/authui_inputTextColor"
            android:textSize="18sp"/>

        <TextView
            android:text='"A quote is just words spoken by one person while someone else was there to listen."'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileDescription"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/authui_inputTextColor"
            android:layout_margin="8dp"/>

        <TextView
            android:text="Tulsa, Ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileCityState"
            android:gravity="center"
            android:textColor="@color/authui_inputTextColor"
            android:layout_margin="5dp"
            android:textSize="12sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:text="0\nUser Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileUserScore"
                android:textColor="@color/authui_inputTextColor"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:text="0\nFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileFollowing"
                android:textColor="@color/authui_inputTextColor"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ProfileHeader"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <TextView
        android:text="@string/section_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProfileHeader"
        android:id="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/authui_inputTextColorDark"
        android:gravity="center_vertical|center_horizontal"/>

</RelativeLayout>

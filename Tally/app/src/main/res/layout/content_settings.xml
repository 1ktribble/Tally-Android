<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.tallythevote.ProfileActivity"
    tools:showIn="@layout/activity_settings">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:columnCount="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:columnCount="4"
            android:rowCount="6">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/voterInformationText"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="2dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_voting_box"
                android:id="@+id/imageView6"
                android:layout_row="2"
                android:layout_column="0"
                android:padding="15dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_voting_box"
                android:id="@+id/imageView5"
                android:padding="15dp"
                android:layout_row="1"
                android:layout_column="0"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameText"
                android:layout_row="1"
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_columnSpan="3"
                android:textStyle="bold"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usernameText"
                android:layout_column="1"
                android:layout_row="2"
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_columnSpan="3"
                android:textStyle="bold"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addressText"
                android:layout_column="1"
                android:layout_row="4"
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_columnSpan="3"
                android:textStyle="bold"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneNumberText"
                android:layout_column="1"
                android:layout_row="5"
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_columnSpan="3"
                android:textStyle="bold"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/voterIDText"
                android:layout_column="1"
                android:layout_row="3"
                android:padding="20dp"
                android:textSize="20sp"
                android:layout_columnSpan="3"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_voting_box"
                android:id="@+id/imageView8"
                android:layout_column="0"
                android:layout_row="3"
                android:padding="15dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_voting_box"
                android:id="@+id/imageView9"
                android:layout_row="4"
                android:layout_column="0"
                android:padding="15dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_voting_box"
                android:id="@+id/imageView10"
                android:layout_row="5"
                android:layout_column="0"
                android:padding="15dp"/>
        </GridLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:padding="15dp"
            android:layout_column="0"
            android:layout_margin="15dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="4"
            android:layout_row="2"
            android:layout_column="0">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rankStringText"
                android:layout_row="1"
                android:layout_column="1"
                android:padding="15dp"
                android:textSize="27sp"
                android:textStyle="bold"
                />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scoreSectionText"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="2dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_voting_box"
                android:id="@+id/imageView2"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="15dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_voting_box"
                android:id="@+id/imageView4"
                android:layout_row="2"
                android:layout_column="0"
                android:padding="15dp"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scoreStringText"
                android:layout_row="2"
                android:layout_column="1"
                android:padding="15dp"
                android:textSize="27sp"
                android:textStyle="bold"
                />

            <TextView
                android:text="@string/default_score_and_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rankNumberText"
                android:layout_row="1"
                android:layout_column="3"
                android:padding="20dp"
                android:layout_gravity="top|right"/>

            <TextView
                android:text="@string/default_score_and_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:padding="20dp"
                android:layout_gravity="top|right"
                android:id="@+id/pointsNumText"/>

        </GridLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:padding="15dp"
            android:layout_column="0"
            android:layout_margin="15dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="1">

        </GridLayout>

    </GridLayout>
</android.support.v4.widget.NestedScrollView>

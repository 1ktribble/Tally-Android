<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="3dp"
                                    android:background="@color/md_white_1000"
                                    app:cardBackgroundColor="@color/md_white_1000"
                                    app:cardUseCompatPadding="true"
                                    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/politicianCard"
        android:background="@color/md_white_1000">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/politicianImage"
            android:background="@color/md_white_1000"
            android:contentDescription="@string/politician_image"
            android:layout_margin="5dp"/>

        <TextView
            android:text="@string/politician_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/politicianPosition"
            android:paddingLeft="2dp"
            android:background="@color/md_white_1000"
            android:paddingRight="2dp"
            android:layout_below="@+id/politicianImage"
            android:layout_alignLeft="@+id/politicianImage"
            android:layout_alignStart="@+id/politicianImage"
            android:layout_alignRight="@+id/followButton"
            android:layout_alignEnd="@+id/followButton"
            android:layout_gravity="center|center_horizontal"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/billHistoryButton"
            android:text="@string/bill_history_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/md_red_700"
            android:layout_below="@+id/politicianPosition"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/followButton"
            android:text="@string/follow_politician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="@color/md_red_700"
            android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/billHistoryButton"
            android:layout_alignBottom="@+id/billHistoryButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_gravity="bottom"
            android:textSize="10sp"/>

        <TextView
            android:text="@string/default_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/politicianName"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center_vertical"
            android:background="@color/md_white_1000"
            android:layout_alignTop="@+id/politicianImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/politicianImage"
            android:layout_toEndOf="@+id/politicianImage"
            android:layout_alignBottom="@+id/politicianImage"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
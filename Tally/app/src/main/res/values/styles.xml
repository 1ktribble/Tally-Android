<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_blue_600</item>
        <item name="colorPrimaryDark">@color/md_grey_900</item>
        <item name="colorAccent">@color/md_grey_500</item>
        <item name="android:background">@color/md_blue_50</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menuBars">
        <item name="android:background">@color/md_blue_600</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorPrimaryInverse">@color/md_white_1000</item>
    </style>

</resources>
